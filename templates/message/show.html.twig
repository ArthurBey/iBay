{% extends "base.html.twig" %}

{% block title %}Discussion{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/inbox.css">
{% endblock %}

{% block body %}
<div class="container">

    <div class="card mt-3">
        <div class="card-header-bg">
            <div class="card-header">
                <h5>
                    {{ threadQuestion.title}}
                </h5>
                
            </div>
        </div>

        <div class="card-body p-3 p-3">
            <div class="card text-white bg-warning mb-3 ml-5">
                <div class="card-header">{{ threadQuestion.sender.nickname }} - le {{ threadQuestion.createdAt | date("d/m/Y à H:m") }}</div>
                <div class="card-body p-3">
                    <p class="card-text">{{ threadQuestion.content }}</p>
                </div>
            </div>
            {% for message in threadMessages %}
                {% if threadQuestion.sender == message.sender %}
                <div class="card text-white bg-info mb-3 mr-5">
                    <div class="card-header">{{ message.receiver.nickname }} - le {{ message.createdAt | date("d/m/Y à H:m") }}</div>
                    <div class="card-body p-3">
                        <p class="card-text">{{ message.content }}</p>
                    </div>
                </div>
                {% else %}
                    <div class="card text-white bg-warning mb-3 ml-5">
                        <div class="card-header">{{ message.receiver.nickname }} - le {{ message.createdAt | date("d/m/Y à H:m") }}</div>
                        <div class="card-body p-3">
                            <p class="card-text">{{ message.content }}</p>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
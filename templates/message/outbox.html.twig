{% extends 'base.html.twig' %}

{% block title %}Boîte de réception{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="/css/inbox.css">
{% endblock %}

{% block body %}
<div class="container">

    <div class="card mt-3">
        <div class="card-header-bg">
            <div class="card-header">
                <h5>
                    <i class="far fa-paper-plane fa-lg"></i>
                    Boîte d'envois
                </h5>
                
            </div>
        </div>

        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Questions envoyées</th>
                        <th>Destinataire</th>
                        <th>Envoyé le</th>
                    </tr>
                </thead>
                <tbody>
                    {% for thread in threads %}
                        <tr>
                            <td class="my-0 p-0 ">
                                <a href="{{ path('messages_show', {'id': thread.id}) }}" class="btn btn-primary text-left">
                                    <i class="far fa-paper-plane"></i>
                                {{ thread.title }}</a>
                            </td>
                            <td class="my-0 p-0">{{ thread.receiver.nickname }}</td>
                            <td class="my-0 p-0">{{ thread.createdAt | date("d/m/Y à h:m") }}</td>
                        </tr>   
                    {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('messages_inbox') }}" class="btn btn-warning m-3">
                Aller à la boîte de réception
            </a>
        </div>
       
    </div>
   
</div>
{% endblock %}

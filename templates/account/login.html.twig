{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-md-3">&nbsp;</div> <!-- Colonne medium 3 : disaparaitra en mobile / et contient un espace insécable-->
        <div class="col-md-6">
            <div class="bg-light py-3 px-3"> <!-- pour donner un fond 'light' à la div + padding horiz. et vertical dans la div -->
                {% if error %}
                    <div class="alert alert-danger">Email ou mot de passe invalide !</div>
                {% endif %}
                {% for class, message in app.flashes %}{% endfor %} <!-- Du coup les msg flash s'afficheront dans le cadre -->
                <h1>Connectez-vous !</h1>
                <form method="post">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" name="email" id="email" class="form-control" placeholder="Votre adresse email" required value="{{last_username}}">
                    </div> <!-- ne pas oublier 'required' pour les input de login ! -->
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input type="password" name="password" id="password" class="form-control" placeholder="Votre mot de passe" required>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Se connecter</button>
                        <a href="{{ path('registration') }}" class="btn btn-info">Page d'inscription</a>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                </form>
            </div>
        </div> 
    </div>
</div>
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
{% endblock %}

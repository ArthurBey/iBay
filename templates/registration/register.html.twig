{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="container">
        <h1 class="my-5">Inscription</h1>

        {{ form_start(registrationForm) }}

        <div class="row">
            <div class="col">
                <div class="alert alert-light">
                    <h2 class="alert-heading">Informations générales</h2>
                    <hr>
                    {{ form_row(registrationForm.firstName) }}
                    {{ form_row(registrationForm.lastName) }}
                    {{ form_row(registrationForm.username) }}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.profilePicture) }}
                </div>
                <div class="alert alert-light">
                    <h2 class="alert-heading">Mot de passe</h2>
                    <hr>
                    {{ form_row(registrationForm.plainPassword) }}
                </div>
            </div>
            <div class="col">
                <div class="alert alert-light">
                    <h2 class="alert-heading">Détails</h2>
                    <br>
                    {{ form_row(registrationForm.description) }}
                    <hr>

                    <p>Validez le formulaire d'inscription web en cliquant sur le bouton web ci dessous</p>
                    {{ form_row(registrationForm.agreeTerms) }}
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check"></i>
                        S'inscrire !
                    </button>
                </div>
            </div>
        </div>

        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
